<Window x:Class="UserInput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" KeyDown="keypressed" MouseLeftButtonDown="mouseClicked">
    <Grid>
        <Label Content="Mouse Location" HorizontalAlignment="Left" Margin="10,290,0,0" VerticalAlignment="Top"/>
        <Label x:Name="mouseLocation" Content="0, 0" HorizontalAlignment="Left" Margin="100,290,0,0" VerticalAlignment="Top"/>
        <Label x:Name="keypressedtext" Content="No Key pressed yet" HorizontalAlignment="Left" Margin="159,290,0,0" VerticalAlignment="Top"/>
        <Label x:Name="mouseClickMessage" Content="No Mouse Click yet" HorizontalAlignment="Left" Margin="360,290,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
